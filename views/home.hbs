<div class="home-page">

  <div class="banner">
    <div class="container">
      <h1 class="logo-font">conduit</h1>
      <p>A place to share your knowledge.</p>
    </div>
  </div>

  <div class="container page">
    <div class="row">

      <div class="col-md-9">
        <div class="feed-toggle">
          <ul class="nav nav-pills outline-active">
            {{#if user}}
              <li class="nav-item">
                <a class="nav-link {{#if filter.following}}active{{/if}}" href="/home?filter=following">
                  Your Feed
                </a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a class="nav-link {{#if filter.global}}active{{/if}}" href="/home?filter=global">
                Global Feed
              </a>
            </li>
            {{#if tag}}
              <li class="nav-item">
                <a class="nav-link active" href="/home?filter=tag&tag={{uc tag}}">
                  <i class="ion-pound"></i>
                  {{tag}}
                </a>
              </li>
            {{/if}}
          </ul>
        </div>

        {{#each articles}}
          {{>article-preview user=../user}}
        {{else}}
          <div class="article-preview">No articles are here... yet.</div>
        {{/each}}

        {{#if pageLinks}}
          <nav>
            <ul class="pagination">
              {{#each pageLinks}}
                <li class="page-item {{#if active}}active{{/if}}">
                  <a class="page-link" href="{{url}}">{{page}}</a>
                </li>
              {{/each}}
            </ul>
          </nav>
        {{/if}}
      </div>
  
      <div class="col-md-3">
        <div class="sidebar">
          <p>Popular Tags</p>

          <div class="tag-list">
            {{#each popularTags}}
              <a href="/home?filter=tag&tag={{uc this}}" class="tag-pill tag-default">
                {{this}}
              </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
