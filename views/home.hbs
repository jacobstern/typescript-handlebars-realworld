<div class="home-page">

  <div class="banner">
    <div class="container">
      <h1 class="logo-font">conduit</h1>
      <p>A place to share your knowledge.</p>
    </div>
  </div>

  <div class="container page">
    <div class="row">

      <div class="col-md-9">
        <div class="feed-toggle">
          <ul class="nav nav-pills outline-active">
            <li class="nav-item">
              <a class="nav-link {{#unless user}}disabled{{/unless}}" href="/home?filter=following">
                Your Feed
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{#if globalFeed}}active{{/if}}" href="/home?filter=global">
                Global Feed
              </a>
            </li>
            {{#if tag}}
              <li class="nav-item">
                <a class="nav-link active" href="{{homepageTagURL tag}}">
                  <i class="ion-pound"></i>
                  {{tag}}
                </a>
              </li>
            {{/if}}
          </ul>
        </div>

        {{#each articles}}
          {{>article-preview}}
        {{else}}
          <div class="article-preview">No articles are here... yet.</div>
        {{/each}}
      </div>
  
      <div class="col-md-3">
        <div class="sidebar">
          <p>Popular Tags</p>

          <div class="tag-list">
            {{#each popularTags}}
              <a href="{{homepageTagURL this}}" class="tag-pill tag-default">
                {{this}}
              </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>