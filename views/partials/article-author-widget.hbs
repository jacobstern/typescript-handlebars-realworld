<a href="/profile/{{uc author.username}}">
  {{#if author.image}}
  <img src="{{author.image}}" />
  {{else}}
  <img src="https://static.productionready.io/images/smiley-cyrus.jpg" />
  {{/if}}
</a>
<div class="info">
  <a href="/profile/{{uc author.username}}" class="author">{{author.username}}</a>
  <span class="date">{{dateString createdAt}}</span>
</div>
