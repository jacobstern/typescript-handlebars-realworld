<div class="article-meta">
  {{>article-author-widget }}

  {{#if mine}}
    <a href="/editor/{{slug}}" class="btn btn-outline-secondary btn-sm">
      <i class="ion-edit"></i> Edit Article    
    </a>

    {{!-- References form defined in article.hbs --}}
    <button class="btn btn-outline-danger btn-sm" form="delete-post-form">
      <i class="ion-trash-a"></i> Delete Article
    </button>
  {{else}}
    {{#if author.following}}
      <button
        class="btn btn-sm btn-outline-secondary" data-follow-button
        data-following data-profile={{author.username}}>
        <i class="ion-close"></i>
        &nbsp;
        <span data-follow-button-text>Unfollow {{author.username}}</span>
      </button>
    {{else}}
      <button
        class="btn btn-sm btn-outline-secondary" data-follow-button
        data-profile={{author.username}}>
        <i class="ion-plus-round"></i>
        &nbsp;
        <span data-follow-button-text>Follow {{author.username}}</span>
      </button>
    {{/if}}
    &nbsp;
    {{#if favorited}}
      <button
        class="btn btn-sm btn-primary" data-favorite-button="{{slug}}"
        data-favorite-button-favorited="">
    {{else}}
      <button class="btn btn-sm btn-outline-primary" data-favorite-button="{{slug}}">
    {{/if}}
      <i class="ion-heart"></i>
      &nbsp;
      <span data-favorite-button-text="">
        {{#if favorited}}Unfavorite Article{{else}}Favorite Article{{/if}}
      </span>
      <span class="counter">(<span data-favorite-button-count="">{{favoritesCount}}</span>)</span>
    </button>
  {{/if}}
</div>