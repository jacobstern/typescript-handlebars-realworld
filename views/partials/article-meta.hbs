<div class="article-meta">
  {{>article-author-widget article}}

  {{#if isOwnArticle}}
    <a href="/editor/{{article.slug}}" class="btn btn-outline-secondary btn-sm">
      <i class="ion-edit"></i> Edit Article    
    </a>

    <button class="btn btn-outline-danger btn-sm" form="delete-post-form">
      <i class="ion-trash-a"></i> Delete Article
    </button>
  {{else}}
    <button class="btn btn-sm btn-outline-secondary">
      <i class="ion-plus-round"></i>
      &nbsp;
      Follow {{article.author.username}}
    </button>
    &nbsp;
    <button class="btn btn-sm btn-outline-primary">
      <i class="ion-heart"></i>
      &nbsp;
      Favorite Article <span class="counter">({{article.favoritesCount}})</span>
    </button>
  {{/if}}
</div>