<div class="profile-page">

  <div class="user-info">
    <div class="container">
      <div class="row">

        <div class="col-xs-12 col-md-10 offset-md-1">
          {{#if profile.image}}
          <img src="{{profile.image}}" class="user-img">
          {{else}}
          <img src="https://static.productionready.io/images/smiley-cyrus.jpg" class="user-img">
          {{/if}}

          <h4>{{profile.username}}</h4>
          <p>
            {{profile.bio}}
          </p>

          {{#if isOwnProfile}}
            <a class="btn btn-sm btn-outline-secondary action-btn" href="/settings">
              <i class="ion-gear-a"></i>
              Edit Profile Settings
            </a>
          {{else}}
            <button class="btn btn-sm btn-outline-secondary action-btn">
              <i class="ion-plus-round"></i>
              &nbsp;
              Follow {{profile.username}}
            </button>
          {{/if}}
        </div>

      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-md-10 offset-md-1">
        <div class="articles-toggle">
          <ul class="nav nav-pills outline-active">
            <li class="nav-item">
              <a class="nav-link {{#if myArticles}}active{{/if}}" href="{{profileURL profile filter='mine'}}">
                My Articles
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link {{#if favoritedArticles}}active{{/if}}" href="{{profileURL profile filter='favorited'}}">
                Favorited Articles
              </a>
            </li>
          </ul>
        </div>

        {{#each articles}}
          {{>article-preview user=../user}}
        {{else}}
          <div class="article-preview">No articles are here... yet.</div>
        {{/each}}
    </div>
  </div>

</div>